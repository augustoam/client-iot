<%= simple_form_for @usuario, url: contas_path(@usuario) do |f| %>
  <%= f.hidden_field :grupo_id, value: params[:grupo_id] %>
  <div class='row'>
    <%= f.input :email, wrapper_html: { class: 'm12 s12' } %>
  </div>

  <div class='row'>
    <%= f.input :password, label: 'Senha', wrapper_html: { class: 'm12 s12' } %>
  </div>
  <div class='row'>
      <%= f.input :password_confirmation, label: 'Confirme sua Senha', wrapper_html: { class: 'm12 s12' } %>
  </div>

  <div class='row'>
    <div class='col s12'>
      <%= f.submit t(".sign_up"), class: 'col s12 waves-effect waves-light btn cyan' %>
    </div>
  </div>
<% end %>