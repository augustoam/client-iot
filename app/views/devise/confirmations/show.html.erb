<h2><%= t(".change_my_password") %></h2>

<%= simple_form_for(resource, as: resource_name, url: confirm_path, method: :patch, html: { role: "form" }) do |f| %>

  <%= f.input :confirmation_token, as: :hidden %>


  <div class="form-inputs">
    <%= f.input :password, label: t(".new_password"), required: true, autofocus: true, wrapper_html: { class: 'm12 s12' }  %>
    <%= f.input :password_confirmation, label: t(".confirm_new_password"), required: true, wrapper_html: { class: 'm12 s12' }  %>
  </div>

  <div class='row'>
    <div class='col s12'>
      <%= button_tag(type: 'submit', class: "col s12 waves-effect waves-light btn cyan") do %>
				<%= t('views.actions.change_password') %>
			<% end %>
    </div>
  </div>
<% end %>

<%= render_devise_view_links %>
