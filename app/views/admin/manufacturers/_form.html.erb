<%= simple_form_for([:admin, @manufacturer]) do |f| %>
<%= f.error_notification %>

<div class="row">
  <%= f.input :name, wrapper_html: { class: 'm12 s12' } %>
</div>
<div class="row">
  <%= f.input :obs, wrapper_html: { class: 'm12 s12' } %>
</div>
<div class="row">
  <%= f.input :active, wrapper_html: { class: 'm12 s12' } %>
</div>

<div class="row">
  <% if @manufacturer.persisted? %>
    <%= link_icon_to_back admin_manufacturer_path(@manufacturer) %>
  <% else %>
    <%= link_icon_to_back admin_manufacturers_path %>
  <% end %>
  <%= save_button %>
</div>
<% end %>
