<%= simple_form_for(@admin, url: admin_administrador_path(@admin)) do |f| %>
<div class="container">
  <div class="row">
  	<h3> <%= t(".change_my_password") %> <%= singular_model_name_for(Admin) %></h3>
  </div>
    <div class="row">
      <%= f.input :password, label: t(".new_password"), required: true, autofocus: true, wrapper_html: { class: 'm12 s12' } %>
    </div>
    <div class="row">
      <%= f.input :password_confirmation, label: t(".confirm_new_password"), required: true, wrapper_html: { class: 'm12 s12' } %>
    </div>
    <%= link_icon_to_back root_path(@admin) %>
    <%= save_button %>
  </div>
<% end %>
