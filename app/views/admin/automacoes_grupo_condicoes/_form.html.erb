<%= simple_form_for([:admin, @automacao_grupo_condicao], url: admin_automacao_grupo_condicao_form_path(@automacao_grupo, @automacao_grupo_condicao)) do |f| %>
  <%= f.error_notification %>

  <div class="repeat-data">
    <%= @automacao_grupo_condicao.repeat %>
  </div>

  <div class="row">
    <%= f.input :tipo_condicao,
      wrapper_html: { class: 'm12 s12 tipo-condicao-select' },
      collection: tipo_condicao_keys %>
  </div>

  <div class="row">
    <%= f.input :repeat,
      wrapper_html: { class: 'm12 s12 repeat-select' },
      input_html: { multiple: true },
      collection: [['Once', 'once'],
                    ['Every Day', 'every_day'],
                    ['Weekdays', 'weekdays'],
                    ['Weekends', 'weekends'],
                    ['Sunday', 'sunday'],
                    ['Monday', 'monday'],
                    ['Tuesday', 'tuesday'],
                    ['Wednesday', 'wednesday'],
                    ['Thursday', 'thursday'],
                    ['Friday', 'friday'],
                    ['Saturday', 'saturday']] %>
  </div>

  <div class="row">
    <%= f.input :turn_on, wrapper_html: { class: 'm12 s12 turn-on-select' } %>
  </div>

  <ul class="collapsible componente-condicao-select">
    <% @componentes_ambientes.each do |componente_ambiente| %>
      <li>
        <div class="collapsible-header"><%= componente_ambiente.descricao %></div>

          <% componente_ambiente.controle.componente.componentes_propriedades.each do |componente_propriedade| %>
            <div class="collapsible-body">
              <span>
                <%= componente_propriedade.descricao %>
                <%= f.input :propriedade, as: :boolean, label: '' %>
              </span>
            </div>
          <% end %>
      </li>
    <% end %>
  </ul>

  <div class="row">
    <% if @automacao_grupo_condicao.persisted? %>
      <%= link_icon_to_back admin_automacao_grupo_condicao_path(@automacao_grupo_condicao) %>
    <% else %>
      <%= link_icon_to_back admin_grupo_automacoes_grupo_path(@automacao_grupo) %>
    <% end %>
    <%= save_button %>
  </div>
<% end %>
