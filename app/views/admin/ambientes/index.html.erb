<% breadcrumb :ambientes %>
  <div class="row">
    <h3><%= plural_model_name_for(Ambiente) %></h3>
  </div>

  <div class="row">
    <%= search_form_for @q, url: admin_ambientes_path do |f| %>

    <div class="col s11">
      <%= f.search_field :descricao_cont, class: "form-control", placeholder: "Pesquisar Ambientes" %>
    </div>
    <div class="col s1">
      <button class="waves-effect waves-light btn grey lighten-4" type="submit">
        <i class="large material-icons black-text">search</i>
      </button>
    </div>

  <% end %>
</div>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th><%= Ambiente.human_attribute_name(:id) %></th>
        <th><%= Ambiente.human_attribute_name(:descricao) %></th>
        <th><%= Ambiente.human_attribute_name(:created_at) %></th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @ambientes.each do |ambiente| %>
        <tr data-href="<%= admin_ambiente_path(ambiente) %>">
          <td><%= ambiente.id %></td>
          <td><%= ambiente.descricao %></td>
          <td><%= ltime ambiente.created_at %></td>
          <td><%= link_icon_to_edit(edit_admin_ambiente_path(ambiente))%></td>
          <td><%= link_icon_to_destroy(admin_ambiente_path(ambiente)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <%= link_icon_to_back admin_home_admin_index_path %>
  <%= link_icon_to_new(new_admin_ambiente_path, action_new(@ambientes)) %>
</div>

<div class="center-align">
  <%= will_paginate @ambientes, renderer: MaterializePagination::Rails %>
</div>
