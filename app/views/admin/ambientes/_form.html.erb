<%= simple_form_for([:admin, @ambiente]) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <%= f.input :descricao, wrapper_html: { class: 'm12 s12' } %>
  </div>

  <div class="row">
    <%= f.input :icone, wrapper_html: { class: 'm12 s12' } %>
  </div>

  <div class="row">
    <%= f.input :url_icone, wrapper_html: { class: 'm12 s12' } %>
  </div>

  <div class="row">
    <%= f.input :obs, wrapper_html: { class: 'm12 s12' } %>
  </div>

  <div class="row">
    <% if @ambiente.persisted? %>
      <%= link_icon_to_back admin_ambiente_path(@ambiente) %>
    <% else %>
      <%= link_icon_to_back admin_ambientes_path %>
    <% end %>
    <%= save_button %>
  </div>
<% end %>
