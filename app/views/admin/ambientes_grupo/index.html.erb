<% breadcrumb :rooms_group, @group %>

<div class="row">
  <%= search_form_for @q, url: admin_group_rooms_group_path do |f| %>
    <div class="col s12">
      <div class="input-search">
        <%= button_tag(type: 'submit', class: "btn-flat btn-search") do %>
          <i class="material-icons icon-search icon-hover">search</i>
        <% end %>
        <%= f.search_field :nome_cont, class: "form-control", placeholder: "Search Ambients" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container-row">
  <b><%= plural_model_name_for(RoomGroup) %></b>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th><%= RoomGroup.human_attribute_name(:id) %></th>
          <th><%= RoomGroup.human_attribute_name(:nome) %></th>
          <th><%= RoomGroup.human_attribute_name(:visivel) %></th>
          <th><%= RoomGroup.human_attribute_name(:created_at) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @rooms_group.each do |room_group| %>
          <tr data-href="<%= admin_room_group_path(room_group) %>">
            <td><%= room_group.id %></td>
            <td><%= room_group.nome %></td>
            <td><%= room_group.visivel %></td>
            <td><%= ltime room_group.created_at %></td>
            <td><%= link_icon_to_edit(edit_admin_room_group_path(room_group))%></td>
            <td><%= link_icon_to_destroy(admin_room_group_path(room_group)) %></td>
            <td><%= link_to 'Devices', admin_room_group_devices_room_path(room_group) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_icon_to_back admin_groups_path %>
    <%= link_icon_to_new(new_admin_group_room_group_path(@group), action_new(@rooms_group)) %>
  </div>
</div>

<div class="center-align">
  <%= will_paginate @rooms_group, renderer: MaterializePagination::Rails %>
</div>
