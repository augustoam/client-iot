<% breadcrumb :group_automation_conditions, @group_automation %>

<div class="row">
  <%= search_form_for @q, url: admin_group_automation_group_automation_conditions_path do |f| %>
    <div class="col s12">
      <div class="input-search">
        <%= button_tag(type: 'submit', class: "btn-flat btn-search") do %>
          <i class="material-icons icon-search icon-hover">search</i>
        <% end %>
        <%= f.search_field :type_condition_cont, class: "form-control", placeholder: "Search Conditions" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container-row">
  <b><%= plural_model_name_for(GroupAutomationCondition) %></b>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th><%= GroupAutomationCondition.human_attribute_name(:id) %></th>
          <th><%= GroupAutomationCondition.human_attribute_name(:type_condition) %></th>
          <th><%= GroupAutomationCondition.human_attribute_name(:active) %></th>
          <th><%= GroupAutomationCondition.human_attribute_name(:value_set) %></th>
          <th><%= GroupAutomationCondition.human_attribute_name(:created_at) %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @group_automation_conditions.each do |group_automation_condition| %>
          <tr data-href="<%= admin_group_automation_condition_path(group_automation_condition) %>">
            <td><%= group_automation_condition.id %></td>
            <td><%= group_automation_condition.type_condition %></td>
            <td><%= group_automation_condition.active %></td>
            <td><%= group_automation_condition.value_set %></td>
            <td><%= ltime group_automation_condition.created_at %></td>
            <td><%= link_icon_to_edit(edit_admin_group_automation_condition_path(group_automation_condition))%></td>
            <td><%= link_icon_to_destroy(admin_group_automation_condition_path(group_automation_condition)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_icon_to_back admin_group_group_automations_path(@group_automation.group) %>
    <%= link_icon_to_new(new_admin_group_automation_group_automation_condition_path(@group_automation), action_new(@group_automation_conditions)) %>
  </div>
</div>

<div class="center-align">
  <%= will_paginate @group_automations, renderer: MaterializePagination::Rails %>
</div>
