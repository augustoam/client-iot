<% breadcrumb :layout_controls %>

<div class="row">
  <%= search_form_for @q, url: admin_layout_controls_path do |f| %>
    <div class="col s12">
      <div class="input-search">
        <%= button_tag(type: 'submit', class: "btn-flat btn-search") do %>
          <i class="material-icons icon-search icon-hover">search</i>
        <% end %>
        <%= f.search_field :descricao_or_obs_cont, class: "form-control", placeholder: "Search Controls Layouts" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container-row">
  <b><%= plural_model_name_for(ControlLayout) %></b>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th><%= ControlLayout.human_attribute_name(:id) %></th>
          <th><%= ControlLayout.human_attribute_name(:descricao) %></th>
          <th><%= ControlLayout.human_attribute_name(:tipo_layout) %></th>
          <th><%= ControlLayout.human_attribute_name(:created_at) %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @layout_controls.each do |layout_control| %>

          <tr data-href="<%= admin_layout_control_path(layout_control) %>">
            <td><%= layout_control.id %></td>
            <td><%= layout_control.descricao %></td>
            <td><%= layout_control.tipo_layout %></td>
            <td><%= ltime layout_control.created_at %></td>
            <td><%= link_icon_to_edit(edit_admin_layout_control_path(layout_control))%></td>
            <td><%= link_icon_to_destroy(admin_layout_control_path(layout_control)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_icon_to_back admin_home_admin_index_path %>
    <%= link_icon_to_new(new_admin_layout_control_path, action_new(@layout_controls)) %>
  </div>
</div>

<div class="center-align">
  <%= will_paginate @layout_controls_devices, renderer: MaterializePagination::Rails %>
</div>
