<%= simple_form_for([:admin, @layout_control]) do |f| %>
<%= f.error_notification %>

<div class="row">
  <%= f.input :descricao, wrapper_html: { class: 'm12 s12' } %>
</div>

<div class="row">
  <%= f.input :tipo_layout, wrapper_html: { class: 'm12 s12' } %>
</div>

<div class="row">
  <%= f.input :obs, wrapper_html: { class: 'm12 s12' } %>
</div>

<div class="row">
  <% if @layout_control.persisted? %>
    <%= link_icon_to_back admin_layout_control_path(@layout_control) %>
  <% else %>
    <%= link_icon_to_back admin_layout_controls_path %>
  <% end %>
  <%= save_button %>
</div>
<% end %>
