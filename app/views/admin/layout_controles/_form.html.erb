<%= simple_form_for([:admin, @layout_controle]) do |f| %>
<%= f.error_notification %>

<div class="row">
  <%= f.input :descricao, wrapper_html: { class: 'm12 s12' } %>
</div>

<div class="row">
  <%= f.input :obs, wrapper_html: { class: 'm12 s12' } %>
</div>

<div class="row">
  <% if @layout_controle.persisted? %>
    <%= link_icon_to_back admin_layout_controle_path(@layout_controle) %>
  <% else %>
    <%= link_icon_to_back admin_layout_controles_path %>
  <% end %>
  <%= save_button %>
</div>
<% end %>
