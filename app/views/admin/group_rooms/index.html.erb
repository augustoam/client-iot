<% breadcrumb :group_rooms, @group %>

<div class="row">
  <%= search_form_for @q, url: admin_group_group_rooms_path do |f| %>
    <div class="col s12">
      <div class="input-search">
        <%= button_tag(type: 'submit', class: "btn-flat btn-search") do %>
          <i class="material-icons icon-search icon-hover">search</i>
        <% end %>
        <%= f.search_field :name_cont, class: "form-control", placeholder: "Search Ambients" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container-row">
  <b><%= plural_model_name_for(GroupRoom) %></b>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th><%= GroupRoom.human_attribute_name(:id) %></th>
          <th><%= GroupRoom.human_attribute_name(:name) %></th>
          <th><%= GroupRoom.human_attribute_name(:active) %></th>
          <th><%= GroupRoom.human_attribute_name(:created_at) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @group_rooms.each do |group_room| %>
          <tr data-href="<%= admin_group_room_path(group_room) %>">
            <td><%= group_room.id %></td>
            <td><%= group_room.name %></td>
            <td><%= group_room.active %></td>
            <td><%= ltime group_room.created_at %></td>
            <td><%= link_icon_to_edit(edit_admin_group_room_path(group_room))%></td>
            <td><%= link_icon_to_destroy(admin_group_room_path(group_room)) %></td>
            <td><%= link_to 'Devices', admin_group_room_room_devices_path(group_room) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_icon_to_back admin_groups_path %>
    <%= link_icon_to_new(new_admin_group_group_room_path(@group), action_new(@group_rooms)) %>
  </div>
</div>

<div class="center-align">
  <%= will_paginate @group_rooms, renderer: MaterializePagination::Rails %>
</div>
