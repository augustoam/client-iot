<% breadcrumb :room_device, @room_device %>

<div class="container-row">
  <div class="row">
    <b><%= RoomDevice.human_attribute_name(:id) %></b>
    <%= @room_device.id %>
  </div>
  <div class="row">
    <b><%= RoomDevice.human_attribute_name(:name) %></b>
    <%= @room_device.name %>
  </div>
  <div class="row">
    <b><%= RoomDevice.human_attribute_name(:topic_id) %></b>
    <%= @room_device.topic_id %>
  </div>
  <div class="row">
