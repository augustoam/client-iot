<% breadcrumb :automacoes_group_condicoes, @automacao_group %>

<div class="row">
  <%= search_form_for @q, url: admin_automacao_group_automacoes_group_condicoes_path do |f| %>
    <div class="col s12">
      <div class="input-search">
        <%= button_tag(type: 'submit', class: "btn-flat btn-search") do %>
          <i class="material-icons icon-search icon-hover">search</i>
        <% end %>
        <%= f.search_field :tipo_condicao_cont, class: "form-control", placeholder: "Search Conditions" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container-row">
  <b><%= plural_model_name_for(UserAutomationCondition) %></b>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th><%= UserAutomationCondition.human_attribute_name(:id) %></th>
          <th><%= UserAutomationCondition.human_attribute_name(:tipo_condicao) %></th>
          <th><%= UserAutomationCondition.human_attribute_name(:value_set) %></th>
          <th><%= UserAutomationCondition.human_attribute_name(:created_at) %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @automacoes_group_condicoes.each do |automacao_group_condicao| %>
          <tr data-href="<%= admin_automacao_group_condicao_path(automacao_group_condicao) %>">
            <td><%= automacao_group_condicao.id %></td>
            <td><%= automacao_group_condicao.tipo_condicao %></td>
            <td><%= automacao_group_condicao.value_set %></td>
            <td><%= ltime automacao_group_condicao.created_at %></td>
            <td><%= link_icon_to_edit(edit_admin_automacao_group_condicao_path(automacao_group_condicao))%></td>
            <td><%= link_icon_to_destroy(admin_automacao_group_condicao_path(automacao_group_condicao)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_icon_to_back admin_group_automacoes_group_path(@automacao_group.group) %>
    <%= link_icon_to_new(new_admin_automacao_group_automacao_group_condicao_path(@automacao_group), action_new(@automacoes_group_condicoes)) %>
  </div>
</div>

<div class="center-align">
  <%= will_paginate @automacoes_group, renderer: MaterializePagination::Rails %>
</div>
