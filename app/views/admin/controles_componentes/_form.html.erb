<%= simple_form_for([:admin, @controle_componente]) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <%= f.input :descricao, wrapper_html: { class: 'm12 s12' } %>
  </div>

  <div class="row">
    <%= f.input :obs, wrapper_html: { class: 'm12 s12' } %>
  </div>


  <div class="row">
    <% if @controle_componente.persisted? %>
      <%= link_icon_to_back admin_controles_componentes_path(@controle_componente) %>
    <% else %>
      <%= link_icon_to_back admin_controles_componentes_path %>
    <% end %>
    <%= save_button %>
  </div>
<% end %>
