<% breadcrumb :controle_comandos, @controle %>
<div class="row">
  <h3><%= plural_model_name_for(ControleComando) %></h3>
</div>

<div class="row">
  <%= search_form_for @q, url: admin_controle_controle_comandos_path do |f| %>

  <div class="col s11">
    <%= f.search_field :comando_cont, class: "form-control", placeholder: "Pesquisar Comando" %>
  </div>
  <div class="col s1">
    <button class="waves-effect waves-light btn grey lighten-4" type="submit">
      <i class="large material-icons black-text">search</i>
    </button>
  </div>

<% end %>
</div>

<div class="row">
<table class="table">
  <thead>
    <tr>
      <th><%= ControleComando.human_attribute_name(:id) %></th>
      <th><%= ControleComando.human_attribute_name(:comando) %></th>
      <th><%= ControleComando.human_attribute_name(:codigo) %></th>
      <th><%= ControleComando.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controle_comandos.each do |controle_comando| %>
      <tr data-href="<%= admin_controle_comando_path(controle_comando) %>">
        <td><%= controle_comando.id %></td>
        <td><%= controle_comando.comando %></td>
        <td><%= controle_comando.codigo %></td>
        <td><%= link_icon_to_edit(edit_admin_controle_comando_path(controle_comando)) %></td>
        <td><%= link_icon_to_destroy(admin_controle_comando_path(controle_comando)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
<%= link_icon_to_back admin_controles_path %>
<%= link_icon_to_new(new_admin_controle_controle_comando_path(@controle), action_new(@controle_comandos)) %>
</div>

<div class="center-align">
<%= will_paginate @controle_comandos, renderer: MaterializePagination::Rails %>
</div>
