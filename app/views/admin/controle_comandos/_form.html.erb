<%= simple_form_for([:admin, @controle_comando], url: admin_controle_comando_form_path(@controle, @controle_comando)) do |f| %>
<%= f.error_notification %>
<div class="row">
  <%= f.input :comando, wrapper_html: { class: 'm12 s12' } %>
</div>
<div class="row">
  <%= f.input :codigo, wrapper_html: { class: 'm12 s12' } %>
</div>

<div class="row">
  <% if @controle_comando.persisted? %>
    <%= link_icon_to_back admin_controle_comando_path(@controle_comando) %>
  <% else %>
    <%= link_icon_to_back admin_controle_controle_comandos_path(@controle) %>
  <% end %>
  <%= save_button %>
</div>
<% end %>
