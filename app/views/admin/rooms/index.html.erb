<% breadcrumb :rooms %>

<div class="row">
  <%= search_form_for @q, url: admin_rooms_path do |f| %>
    <div class="col s12">
      <div class="input-search">
        <%= button_tag(type: 'submit', class: "btn-flat btn-search") do %>
          <i class="material-icons icon-search icon-hover">search</i>
        <% end %>
        <%= f.search_field :name_cont, class: "form-control", placeholder: "Pesquisar Rooms" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container-row">
  <b><%= plural_model_name_for(Room) %></b>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th><%= Room.human_attribute_name(:id) %></th>
          <th><%= Room.human_attribute_name(:name) %></th>
          <th><%= Room.human_attribute_name(:active) %></th>
          <th><%= Room.human_attribute_name(:created_at) %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @rooms.each do |room| %>
          <tr data-href="<%= admin_room_path(room) %>">
            <td><%= room.id %></td>
            <td><%= room.name %></td>
            <td><%= room.active %></td>
            <td><%= ltime room.created_at %></td>
            <td><%= link_icon_to_edit(edit_admin_room_path(room))%></td>
            <td><%= link_icon_to_destroy(admin_room_path(room)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_icon_to_back admin_home_admin_index_path %>
    <%= link_icon_to_new(new_admin_room_path, action_new(@rooms)) %>
  </div>
</div>

<div class="center-align">
  <%= will_paginate @rooms, renderer: MaterializePagination::Rails %>
</div>
