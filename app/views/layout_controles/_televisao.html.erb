<div class="container">
  <!-- Botão de Power -->
  <div class="row">
    <div class="col s12">
      <%= link_to '', class: 'z-depth-5 btn-floating btn-large grey lighten-3 publish-mqtt-infravermelho',
                      id: "comando-infra-vermelho-power",
                      data: {
                             room_device: room_device.id,
                             acao:                define_acao('power', room_device),
                             topico:              room_device.topico
                            } do %>

      <i class="large material-icons black-text" style="margin-top: 4px;">power_settings_new</i>

    <% end %>
  </div>
</div>


