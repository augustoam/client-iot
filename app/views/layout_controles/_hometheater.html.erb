<div class="container">
  <!-- Botão de Desligar -->
  <div class="row" >
    <div class="col s12">
      <%= link_to '', class: 'z-depth-5 btn-floating btn-medium grey lighten-3 botao-infra-vermelho',
                      id: "comando-infra-vermelho-power",
                      data: {
                             componente: componente.id,
                             topico: topico_comando('desligar', componente),
                             acao: "power-" + estado_componente(componente)
                            } do %>
        <% if componente.estado %>
          <i class="small material-icons green-text">power_settings_new</i>
        <% else %>
           <i class="small material-icons red-text">power_settings_new</i>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Grid principal - USB-->
  <div class="row">
    <div class="col s3">
      <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                      id: "comando-infra-vermelho-usb",
                      data: {
                             componente: componente.id,
                             topico: topico_comando('usb', componente),
                             acao: "usb"
                            } do %>
         <i style="font-size: 12px;">USB</i>
      <% end %>
    </div>

    <!-- Grid principal - RADIO-->
      <div class="col s3">
        <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-usb",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('radio', componente),
                               acao: "radio"
                              } do %>
           <i style="font-size: 12px;">RADIO</i>
        <% end %>
      </div>

    <!-- Grid principal - AUX -->
      <div class="col s3">
        <%= link_to '', class: 'z-depth-5 btn-floating btn-samll waves-effect waves-light grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-usb",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('aux', componente),
                               acao: "aux"
                              } do %>
           <i style="font-size: 12px;">AUX</i>
        <% end %>
      </div>

    <!-- Grid principal - HDMI-->
      <div class="col s3">
        <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-usb",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('hdmi', componente),
                               acao: "hdmi"
                              } do %>
           <i style="font-size: 12px;">HDMI</i>
        <% end %>
      </div>
  </div>

    <!-- Botão de flecha up -->
    <div class="row">
      <div class="col s12">
        <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-volume-down",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('volume-down', componente),
                               acao: "volume-down"
                              } do %>
           <i class="large material-icons">arrow_upward</i>
        <% end %>
      </div>
    </div>


    <div class="row">
      <div class="col s12 offset-s3">
        <!-- Botão de flecha left -->
        <div class="col s2">
          <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                          id: "comando-infra-vermelho-canal-down",
                          data: {
                                 componente: componente.id,
                                 topico: topico_comando('canal-down', componente),
                                 acao: "canal-down"
                                } do %>
             <i class="large material-icons">arrow_back</i>
          <% end %>
        </div>

        <!-- Botão de okey -->
        <div class="col s2">
          <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                          id: "comando-infra-vermelho-canal-down",
                          data: {
                                 componente: componente.id,
                                 topico: topico_comando('canal-down', componente),
                                 acao: "canal-down"
                                } do %>
             <i class="large material-icons">check</i>
          <% end %>
        </div>

        <!-- Botão de flecha right -->
        <div class="col s2">
          <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                          id: "comando-infra-vermelho-canal-down",
                          data: {
                                 componente: componente.id,
                                 topico: topico_comando('canal-down', componente),
                                 acao: "canal-down"
                                } do %>
             <i class="large material-icons">arrow_forward</i>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">

      <!-- Botão de flecha down -->
      <div class="col s12">
        <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-volume-down",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('volume-down', componente),
                               acao: "volume-down"
                              } do %>
           <i class="large material-icons">arrow_downward</i>
        <% end %>
      </div>
    </div>

    <div class="row">
      <!-- Botão faixa-anterior -->
      <div class="col s4" style="margin-top: 12px;">
        <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light lighten-3 grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-faixa-anterior",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('faixa-anterior', componente),
                               acao: "faixa-anterior"
                              } do %>
           <i class="large material-icons black-text">skip_previous</i>
        <% end %>
      </div>

      <!-- Botão play-pause -->
      <div class="col s4">
        <%= link_to '', class: 'z-depth-5 btn-floating btn-large lighten-3 grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-play-pause",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('play-pause', componente),
                               acao: "play-pause"
                              } do %>
          <% if componente.estado %>
            <i class="small material-icons black-text" style="margin-top: 4px;">play_arrow</i>
          <% else %>
             <i class="small material-icons black-text" style="margin-top: 4px;">pause</i>
          <% end %>
        <% end %>
      </div>

      <!-- Botão proxima-faixa -->
      <div class="col s4" style="margin-top: 12px;">
        <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light lighten-3 grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-proxima-faixa",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('proxima-faixa', componente),
                               acao: "proxima-faixa"
                              } do %>
           <i class="large material-icons black-text">skip_next</i>
        <% end %>
      </div>
    </div>

    <div class="row">
      <!-- Botão mute -->
      <div class="col offset-s3" style="margin-top: -12px;">
        <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light lighten-3 grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-mute",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('mute', componente),
                               acao: "mute"
                              } do %>
           <i class="large material-icons black-text">volume_off</i>
        <% end %>
      </div>

      <!-- Botão stop -->
      <div class="col offset-s3" style="margin-top: -12px;">
        <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light lighten-3 grey botao-infra-vermelho',
                        id: "comando-infra-vermelho-stop",
                        data: {
                               componente: componente.id,
                               topico: topico_comando('stop', componente),
                               acao: "stop"
                              } do %>
           <i class="large material-icons black-text">stop</i>
        <% end %>
      </div>

    </div>

  <div class="row" >
    <!-- Botão de aumentar volume -->
    <div class="col s4">
      <%= link_to '', class: 'z-depth-5 btn-floating btn-large grey lighten-3 botao-infra-vermelho',
                      id: "comando-infra-vermelho-volume-up",
                      data: {
                             componente: componente.id,
                             topico: topico_comando('volume-up', componente),
                             acao: "volume-up"
                            } do %>
         <i class="large material-icons black-text" style="margin-top: 4px;">add</i>
      <% end %>
    </div>

    <!-- Botão de apps -->
    <div class="col s4" style="margin-top: 12px;">
      <%= link_to '', class: 'z-depth-5 btn-floating btn waves-effect waves-light grey botao-infra-vermelho',
                      id: "comando-infra-vermelho-canal-down",
                      data: {
                             componente: componente.id,
                             topico: topico_comando('canal-down', componente),
                             acao: "canal-down"
                            } do %>
         <i class="material-icons">apps</i>
      <% end %>
    </div>

    <!-- Botão de diminuir volume -->
    <div class="col s4">
      <%= link_to '', class: 'z-depth-5 btn-floating btn-large grey lighten-3 botao-infra-vermelho',
                      id: "comando-infra-vermelho-volume-down",
                      data: {
                             componente: componente.id,
                             topico: topico_comando('volume-down', componente),
                             acao: "volume-down"
                            } do %>
         <i class="large material-icons black-text" style="margin-top: 4px;">remove</i>
      <% end %>
    </div>

  </div>

</div>
