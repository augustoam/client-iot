<p id="notice"><%= notice %></p>

<h1>Ambientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Grupo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ambientes.each do |ambiente| %>
      <tr>
        <td><%= ambiente.nome %></td>
        <td><%= ambiente.grupo_id %></td>
        <td><%= link_to 'Show', ambiente %></td>
        <td><%= link_to 'Edit', edit_ambiente_path(ambiente) %></td>
        <td><%= link_to 'Destroy', ambiente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ambiente', new_ambiente_path %>
