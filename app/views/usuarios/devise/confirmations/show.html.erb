<h2><%= t(".change_your_password") %></h2>

<%= simple_form_for(resource, as: resource_name, url: update_confirmations_path, html: { method: :put }) do |f| %>

  <%= f.input :confirmation_token, as: :hidden %>


  <div class="form-inputs">
    <%= f.input :password, label: t(".new_password"), required: true, autofocus: true %>
    <%= f.input :password_confirmation, label: t(".confirm_new_password"), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".change_my_password"), class: "btn btn-block btn-primary" %>
  </div>
<% end %>

<%= render_devise_view_links %>
