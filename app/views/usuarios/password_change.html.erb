<%= simple_form_for(@usuario, url: usuario_password_update_path(@usuario)) do |f| %>
  <div class="container">
    <div class="row">
      <%= f.input :password, label: t(".new_password"), required: true, autofocus: true %>
    </div>
    <div class="row">
      <%= f.input :password_confirmation, label: t(".confirm_new_password"), required: true %>
    </div>
    <%= link_icon_to_back usuario_path(@usuario) %>
    <%= save_button %>
  </div>
<% end %>
