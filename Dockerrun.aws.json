{
  "AWSEBDockerrunVersion": "2",
  "volumes": [{
    "name": "nginx-cache",
    "host": {
      "sourcePath": "/var/app/current/public/"
    }
  }, {
    "name": "nginx-conf",
    "host": {
      "sourcePath": "/var/app/current/lib/dockerfiles/nginx/nginx.conf"
    }
  }, {
    "name": "mqtt-conf",
    "host": {
      "sourcePath": "/var/app/current/lib/dockerfiles/mqtt/config/"
    }
  }],
  "Image": {
    "Name": "483664555724.dkr.ecr.sa-east-1.amazonaws.com/synchouse",
    "Update": "true"
  },
  "containerDefinitions": [{
      "name": "app",
      "image": "483664555724.dkr.ecr.sa-east-1.amazonaws.com/synchouse",
      "essential": true,
      "memory": 512,
      "environment": [{
        "name": "ENVIRONMENT_TYPE",
        "value": "SERVER"
      }],
      "portMappings": [{
        "hostPort": 3000,
        "containerPort": 3000
      }]
    },
    {
      "name": "sidekiq",
      "image": "483664555724.dkr.ecr.sa-east-1.amazonaws.com/synchouse",
      "essential": true,
      "memory": 512,
      "environment": [{
        "name": "ENVIRONMENT_TYPE",
        "value": "WORKER"
      }]
    },
    {
      "name": "mqtt",
      "image": "483664555724.dkr.ecr.sa-east-1.amazonaws.com/synchouse-mqtt",
      "essential": true,
      "memory": 512,
      "environment": [],
      "mountPoints": [{
        "sourceVolume": "mqtt-conf",
        "containerPath": "/mqtt/config/",
        "readOnly": true
      }],
      "portMappings": [{
        "hostPort": 1883,
        "containerPort": 1883
      }, {
        "hostPort": 1884,
        "containerPort": 1884
      }, {
        "hostPort": 3033,
        "containerPort": 3033
      }]
    },
    {
      "name": "nginx",
      "image": "nginx:1.13.5-alpine",
      "essential": true,
      "memory": 128,
      "portMappings": [{
        "hostPort": 80,
        "containerPort": 80
      }],
      "links": [
        "app",
        "mqtt"
      ],
      "volumesFrom": [{
        "sourceContainer": "app"
      }],
      "mountPoints": [{
        "sourceVolume": "nginx-cache",
        "containerPath": "/var/app/current/public",
        "readOnly": true
      }, {
        "sourceVolume": "nginx-conf",
        "containerPath": "/etc/nginx/nginx.conf",
        "readOnly": true
      }]
    }
  ]
}